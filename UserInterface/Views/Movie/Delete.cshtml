@model UserInterface.ViewModels.MovieView

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<h1>Delete</h1>

<h4>Movie</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.addedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.addedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.genre.GenreName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.genre.GenreName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.photo)
        </dt>
        <dd class="col-sm-10">
            @if (Model.photo != null)
            {
                <img src="data:image/jpeg;base64,@Model.photo" alt="Movie Photo" style="width: 100px; height: auto;" />
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>