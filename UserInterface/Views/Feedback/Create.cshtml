@model Core.Domain.Models.Feedback

@{
ViewData["Title"] = "Create Feedback";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Feedback</h1>

<h4>Feedback</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="avis" class="control-label"></label>
                <input asp-for="avis" class="form-control" />
                <span asp-validation-for="avis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="note" class="control-label"></label>
                <input asp-for="note" class="form-control" />
                <span asp-validation-for="note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CustomerId" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <input asp-for="MovieId" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
